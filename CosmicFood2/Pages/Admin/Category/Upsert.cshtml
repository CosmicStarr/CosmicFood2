@page
@model CosmicFood2.Pages.Admin.Category.UpsertModel
@{
}
<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="px-2 row backgroundWhite border">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            @if (Model.category.Id != 0)
            {
                <input asp-for="category.Id" type="hidden" />
            }

            <div class="col-12 px-3" style="border-bottom:1px solid #b6ff00">
                <h2 class="text-primary">@(Model.category.Id != 0 ?"Update": "Category")</h2>
            </div>
            <div class="col-9 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="category.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="category.Name" />
                        <span class="text-danger" asp-validation-for="category.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="category.DisplayOrder"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="category.DisplayOrder" />
                        <span class="text-danger" asp-validation-for="category.DisplayOrder"></span>
                    </div>
                </div>
                <div class="form-group row ">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button class="btn btn-outline-primary form-control" type="submit">@(Model.category.Id != 0 ?"Update": "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-outline-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
